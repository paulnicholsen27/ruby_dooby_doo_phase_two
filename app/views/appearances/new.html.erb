<h1>Add Appearance</h1>
<%# render partial: "shared/error_list", locals: {new_object: @appearance}%>

<% if @appearance.errors.any? %>
    <% @appearance.errors.full_messages.each do |error|%>
    <%= error %>
    <% end %>
<% end %>

<%= form_for @appearance do |f|%>
    <%= f.label :guest %>
    <%= f.collection_select :guest_id, Guest.all, :id, :name %>
    <%= f.label :episode %>
    <%= f.collection_select :episode_id, Episode.all, :id, :number %>
    <%= f.label :rating %>
    <%= f.number_field :rating %>
    <%= f.submit 'Add Appearance'%>
<% end %>
