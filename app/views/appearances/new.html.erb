<h1>Create a new Appearance!</h1>

<% if @appearance.errors.any? 
            @appearance.errors.full_messages.each do |message| %>
                <%= message%>
            <%end%>
    <%end%>

<%= form_for @appearance do |f|%>
    <div>
    <%= f.label :guest%>
    <%=f.collection_select :guest, Guest.all, :id, :name%>
   </div>
   <br>
   <div>
    <%=f.label :episode%>
    <%=f.collection_select :episode, Episode.all, :id, :date%>
    </div>
    <br>
    <div>
    <%=f.label :numeric_rating %>
    <%=f.number_field :numeric_rating %>
   </div>
   <br>
    <%=f.submit 'Submit your Appearance'%>

    <% end %>

